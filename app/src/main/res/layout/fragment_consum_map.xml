<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".consumption.ConsumMapFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="560dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:id="@+id/tvCRF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차트 예시" />
            <ImageView
                android:id="@+id/imgConsumChart"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/chart_ex" />
            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:id="@+id/tvCRF2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10년 후 차트 예시" />
            <ImageView
                android:id="@+id/imgConsumChart2"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/chart_ex" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="종목 선택 : "/>
                <Spinner
                    android:id="@+id/chartSpinner"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="목표 금액 : "/>
                <EditText
                    android:id="@+id/eTMoney"
                    android:textColor="@color/black"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:maxLength="8"
                    android:inputType="number"
                    android:hint="금액 입력"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="원"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/btnCPF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="관련 적금 상품 보러가기" />

</LinearLayout>